@using Services.Model
@model IEnumerable<Item>
@{
    ViewBag.Title = "#ltnet - All development news on single page";
    Layout = "../Shared/_Layout.cshtml";
}
<div style="height: 50px">
</div>
<table class="table">
@foreach (var item in Model)
{
    <tr>
        <td style="width: 50px">
            <img alt="Author Image" src="@(item.AuthorImage ?? "http://placehold.it/48x48")" />            
        </td>
        <td>
            @if (item.ItemType == ItemType.Rss)
            {
                <h3>@Html.Raw(item.Title)</h3>
            }
            <div>
                <a href="@item.AuthorUri">@item.AuthorName</a> | @item.Published | @String.Join(",", @item.Tags)
            </div>
            @Html.Raw(item.Content)
        </td>
    </tr>
}
</table>