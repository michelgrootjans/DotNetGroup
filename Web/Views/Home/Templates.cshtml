<script id="containerTemplate" type="text/x-jquery-tmpl">
    <table class="table">
        {{each Items tmpl="#itemTemplate"}}
    </table>
</script>
<script id="itemTemplate" type="text/x-jquery-tmpl">
    <tr class="item">
        <td style="width: 25px">
            <img src="../../Public/img/icon-{{toItemType ItemType}}.png" alt="{{=ItemType}}" />
        </td>
        <td>
            <div>
                <div class="author-image">
                    <img alt="Author Image" src="{{get AuthorImage defaultValue='http://placehold.it/48x48'}}" />
                </div>
                <div class="read-more">
                    <a href="{{=Url}}" title="Read original post" target="_blank">
                        <i class="icon-share-alt"></i>
                    </a>
                </div>
                <div class="author-info">
                    <a href="{{=AuthorUri}}">{{=AuthorName}}</a> | <span>{{toDate Published}}</span>
                </div>
                <div class="tags">
                    {{each Tags tmpl="#tagTemplate"}}
                </div>
                <div class="content">
                    <h3>{{=Title!}}</h3>
                    {{=Content!}}
                </div>
            </div>
        </td>
    </tr>    
</script>
<script id="tagTemplate" type="text/x-jquery-tmpl">
    <span class="label">{{=$data}}</span>
</script>
<script type="text/javascript">
    $.views.registerTags({
        get: function (value) {
            return value || this.defaultValue;
        },
        toItemType: function (value) {
            switch (value) {
                case 1:
                    return "RSS";
                case 2:
                    return "Twitter";
                default:
                    return "";
            }
        },
        toDate: function (value) {
            var date = new Date(parseInt(value.substr(6)));
            return $.format.date(date, "yyyy-MM-dd hh:mm:ss");
        }
    });
</script>