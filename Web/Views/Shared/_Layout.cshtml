<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="@Url.Content("~/Public/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("http://code.jquery.com/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Public/js/bootstrap.min.js")" type="text/javascript"></script>
</head>
<body data-offset="50">
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="brand" href="/">#ltnet</a>
                <div class="nav-collapse">
                    <ul class="nav">
                        <li class="active"><a href="@Url.Action("Index", "Home")">Stream</a> </li>
                        <li class=""><a href="@Url.Action("Index", "Home", new { type = "rss" })">Rss</a></li>
                        <li class=""><a href="@Url.Action("Index", "Home", new { type = "twitter" })">Twitter</a></li>
                    </ul>
                    <ul class="nav pull-right">
                        <li><a href="/"><sub>by dotnetgroup.lt</sub></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    @RenderBody()
</body>
</html>
